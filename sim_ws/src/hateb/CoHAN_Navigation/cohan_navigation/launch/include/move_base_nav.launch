<launch>
  <!-- move_base node with hateb -->
  <node pkg="move_base" type="move_base" name="move_base" output="screen">
    <param name="base_global_planner" value="global_planner/GlobalPlanner" />
    <param name="base_local_planner" value="hateb_local_planner/HATebLocalPlannerROS" />
    <param name="GlobalPlanner/allow_unknown" value="true" />

    <rosparam file="$(find cohan_navigation)/config/unity/move_base_params.yaml" command="load" />
    <rosparam file="$(find cohan_navigation)/config/unity/global_costmap_params.yaml" command="load" ns="global_costmap"/>
    <rosparam file="$(find cohan_navigation)/config/unity/local_costmap_params.yaml" command="load" ns="local_costmap"/>
    <rosparam file="$(find cohan_navigation)/config/unity/hateb_local_planner_params.yaml" command="load" ns="HATebLocalPlannerROS" />

    <remap from="/cmd_vel" to="/mobile_base_controller/cmd_vel"/>
  </node>
</launch>
